while True:
    numero = int(input('digite um numero e veja se é par ou impar: '))
    if numero % 2 == 0:
        print(f'o numero {numero} é par')
    else:
        print(f'o numero {numero} é impar') 
    verifica = input('deseja continuar? S/N ').upper()
    if verifica == 'N':
        break
#outra forma de fazer o laço while parar é fazendo ele ser verdadeiro e dando uma condição dentro do laço para ele parar 
print('fim do programa')